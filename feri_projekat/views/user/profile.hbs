<script type="text/javascript">
$(function(){

	$("[name='update']").click(async function(){
		const url = window.location.origin + "/user/{{_id}}";

		const username = $("[name='username']").val();
		const email = $("[name='email']").val();
		const password = $("[name='password']").val();

		const response = await fetch(url, {
				method: "PUT",
				headers: {
					"Content-Type": "application/json"
				},
				body: JSON.stringify({
						username: username,
						email: email,
						password: password
				})
		});

		const data = await response.json();
		window.location = window.location;
	});

	$("[name='jwtBtn']").click(async function(){
		const url = window.location.origin + "/user/JWTgen";
		const response = await fetch(url, {
			method: "POST",
			credentials: 'include',
		});
		const data = await response.json();
		$("[name='token']").val(data.token);
	});

	$("[name='delete']").click(async function(){
		const url = window.location.origin + "/user/{{_id}}";
		const response = await fetch(url, {
			method: "DELETE"
		});
		const data = await response.json();
	});

});
</script>
