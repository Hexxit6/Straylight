
    <div class="container-fluid">
        <div class="row">
            <div class="col-4">
                {{#each stations}}
                <form action="/stations/{{address}} "method="get">
                    <button type="submit" class="btn btn-secondary btn-lg btn-block">{{address}}</button><br/>
                </form>
                <div class="text-center">
                    <button  type="button" class="btn btn-danger" onclick='getMap("{{geolocation}}")'><i class="glyphicon glyphicon-map-marker"></i>View on map</button><br/><br/>
                </div>
                {{/each}}
            </div>
            <div class="col-8">
                <div id="mapa" ><iframe width="100%"
                                              height="600"
                                              frameborder="0"
                                              scrolling="no"
                                              marginheight="0"
                                              marginwidth="0"
                                        src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=Maribor&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe></div>
            </div>
        </div>
    </div>





