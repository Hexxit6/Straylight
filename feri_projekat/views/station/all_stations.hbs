<div class="row">
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 g-0">

                <ul  class="list-group">

                    {{#each stations}}
                    <li  class="list-group-item list-group-item-action">
                        <a href="/stations/{{address}}" class="btn btn-primary">{{address}} </a>
                            <button type="button" class="btn btn-danger btn-sm float-end" style="line-height: 26px;
    margin-top: 1px;" onclick='getMap("{{geolocation}}")'><i
                                    class="fa fa-map-marker"></i>
                            </button>

                    </li>

                    {{/each}}

                     </ul>

            </div>
            <div class="col-10 g-0">
                <div id="mapa">
                    <iframe width="100%"
                            height="600"
                            frameborder="0"
                            scrolling="no"
                            marginheight="0"
                            marginwidth="0"
                            src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=Maribor&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
                </div>
            </div>
        </div>
    </div>


